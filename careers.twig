{% block contenttitle %}Current Job Openings{% endblock %}
{% extends "_base.twig" %}
{% block main %}
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Location</th>
            <th>Term</th>
            <th>Closing Date</th>
        </tr>
    </thead>
    <tbody>
        {% for record in records %}
        <tr>
            <td><a href="{{record.link()}}">{{record.title}}</td>
            <td>{{record.location}}</td>
            <td>{{record.term}}</td>
            <td>{% if record.datedepublish != "1900-01-01 00:00:00" %}{{record.datedepublish|date("M d, Y")}}{% else %}Open{% endif %}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
