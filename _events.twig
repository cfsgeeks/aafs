{% setcontent current_events = 'events/latest/5'%}
<ul class="unstyled">
    {% for event in current_events %}
        <li><a href="{{event.link()}}">{{event.title}}</a>
                <p>{{event.event_start|date('l F j, Y')}}{% if event.event_end and event.event_end != event.event_start %}&mdash;{{event.event_end|date('l F j, Y')}}{% endif %}</p>
                <p><small>Where:</small><span class="label info">{{event.location}}</span></p>
                <p>{{event.details}}</p></li>
    {% endfor %}
</ul>