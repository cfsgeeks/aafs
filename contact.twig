{% extends "_base.twig" %}
{% block main %}
{% setcontent offices = 'locations' %}
<div class="span9">
    <div class="contact-help-notice text-center">
        <h3>Need Help? <span class="toll-free">1-866-420-9990</span> 24 Hours</h3>
    </div>
</div>
{% for office in offices %}
    <div class="row">
        <div class="office">
            <div class="span9"><h4 class="vig">{{office.english_name}}</small></h4></div>
            <div class="span5">
                <address>
                    <p class="street">{{office.address}}<br />
                    {% if office.mailing is not empty %}<p class="mailing">{{office.mailing}}<br />{% endif %}
                    <p class="city">{{office.city}}<br />
                    <p class="postal">{{office.postal_code}}<br />
                </address>
            </div>
            <div class="span4">
                <div class="contacts">
                    <p class="phone">Phone: {{office.phone_number}}</p>
                    {% if office.fax_number is not empty %}<p class="fax">Fax: {{office.fax_number}}</p>{% endif %}
                </div>
                <div class="hours">
                    <p>{{office.hours}}</p>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
{% endblock %}