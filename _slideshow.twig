{% setcontent latestpromos = 'promos/latest/5' %}
<div class="carousel" id="myCarousel">
    <div class="carousel-inner">
    {% for promo in latestpromos %}
        <div class="item{% if loop.first %} active{% endif %}">
            {% if promo.linkto %}<a href="{{promo.linkto}}">{% endif %}
            <img src="{{paths.files}}{{promo.filename}}" alt="{{promo.description}}" />
            {% if promo.linkto %}</a>{% endif %}
        </div>
    {% endfor %}
    </div>
    <a href="#myCarousel" class="carousel-control left" data-slide="prev">&lt;</a><a href="#myCarousel" class="carousel-control right" data-slide="next">&gt;</a>
</div>