{% extends '_base.twig' %}
{% block contenttitle %}Our People{% endblock %}
{% block main %}
{{record.body}}
{% setcontent directors = 'people' where {is_director: 'Yes'} orderby 'id' %}
{% setcontent committee = 'people' where {is_committee: 'Yes'} orderby 'id' %}
{% setcontent staff = 'people' where {is_director: 'No', is_committee: 'No'} orderby 'id' %}

<legend>Our Board of Directors &mdash; Executive Committee</legend>
<div class="people">
{% for person in committee %}
<div class="media">
    <img src="http://placehold.it/96x96" alt="Picture of {{person.name}}" class="media-object pull-left">
    <div class="media-body">
        <h5 class="media-heading">{{person.name}} {% if person.title %} &mdash; <small>{{person.title}}</small>{% endif %}</h5>
        <h6>{{person.represents}}</h6>
        {{person.bio}}
    </div>
</div>
{% endfor %}
</div>

<legend>Our Senior Directors</legend>
<div class="people">
{% for person in directors %}
<div class="media">
    <img src="http://placehold.it/96x96" alt="Picture of {{person.name}}" class="media-object pull-left">
    <div class="media-body">
        <h5 class="media-heading">{{person.name}} &mdash; <small>{{person.title}}</small></h5>
        {{person.bio}}
    </div>
</div>
{% endfor %}
</div>

<legend>Our Management Team</legend>
<div class="people">
{% for person in staff %}
<div class="media">
    <img src="http://placehold.it/96x96" alt="Picture of {{person.name}}" class="media-object pull-left">
    <div class="media-body">
        <h5 class="media-heading">{{person.name}} &mdash; <small>{{person.title}}</small></h5>
        {{person.bio}}
    </div>
</div>
{% endfor %}
</div>

{% endblock %}